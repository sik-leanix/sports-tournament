{
  "openapi": "3.0.1",
  "info": {
    "title": "Bookmark API",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [],
  "paths": {
    "/bookmarks/{id}": {
      "put": {
        "summary": "Updates a bookmark",
        "operationId": "updateBookmark",
        "tags": [
          "Bookmarks"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "The id of the bookmark",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Bookmark"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The updated bookmark",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Bookmark"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes a single bookmark by its id",
        "operationId": "deleteBookmark",
        "tags": [
          "Bookmarks"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "The id of the bookmark",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully deleted"
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      }
    },
    "/bookmarks": {
      "post": {
        "summary": "Creates a new bookmark",
        "operationId": "createBookmark",
        "tags": [
          "Bookmarks"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Bookmark"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The created bookmark",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Bookmark"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Gets a list of bookmarks",
        "operationId": "getBookmarks",
        "tags": [
          "Bookmarks"
        ],
        "responses": {
          "200": {
            "description": "List of bookmarks",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedBookmarkResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bookmark": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "maxLength": 255
          },
          "url": {
            "type": "string",
            "maxLength": 500
          },
          "notes": {
            "type": "string",
            "maxLength": 1000,
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "url"
        ]
      },
      "PaginatedBookmarkResponse": {
        "type": "object",
        "properties": {
          "totalCount": {
            "type": "number",
            "minimum": 0
          },
          "page": {
            "type": "number",
            "minimum": 0
          },
          "bookmarks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Bookmark"
            }
          }
        }
      },
      "BadRequestError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "errorCode": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}