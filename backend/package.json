{
  "name": "sports-tournament-app",
  "version": "1.0.0",
  "description": "Plan your sports tournament",
  "main": "./dist/app.js",
  "scripts": {
    "postinstall": "npm run build",
    "deploy": "git subtree push --prefix backend/ heroku main",
    "build": "tsc",
    "dev": "nodemon src/app.ts",
    "knex:migrate": "knex migrate:latest --knexfile src/db/knexfile.ts",
    "knex:seed": "knex seed:run --knexfile src/db/knexfile.ts",
    "knex:rollback-all": "knex migrate:rollback --all --knexfile src/db/knexfile.ts",
    "reset-db": "npm run knex:rollback-all && npm run knex:migrate",
    "start": "nodemon --exec 'ts-node ./src/app.ts'"
  },
  "author": "Sidney Klass",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "@types/pg": "^8.6.1",
    "@types/twig": "^1.12.6",
    "nodemon": "^2.0.14",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.13",
    "pg": "^8.7.1"
  },
  "engines": {
    "node": "14.15.1"
  }
}
